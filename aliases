# This file should be linked in your zshrc
alias ..='cd ..'
alias ...='cd .. && cd ..'
alias cb='vim ~/.zshrc'
alias ccusage='ccusage blocks --live'
alias ch='chmod 700'
alias clip='pbcopy'
alias cv='vim ~/.vimrc'
alias d='cd'
alias decrypt='gpg'
alias encrypt='gpg -c'
alias f='fg'
alias g='git'
alias ga='git add'
alias gd='git diff'
alias grr='grep -r'
alias gr='grep'
alias la='ls --color -a'
alias l='ls --color'
alias ls='ls --color'
alias lsa='ls -la --color=auto'
alias mk='mkdir'
alias psa='ps aux | grep '
alias py='python3'
alias rld='source ~/.zshrc'
alias sagi='sudo apt-get install'
alias v='vim'
alias ls='ls --color=auto'
alias t='touch'
alias wh='which'


#tmux aliases
alias up='tmux resize-pane -U' 
alias down='tmux resize-pane -D' 
alias left='tmux resize-pane -L' 
alias right='tmux resize-pane -R' 

export ALIAS_FILE=$(pwd)/aliases

dn() {
    while true; do
        say "done"
        sleep 1  # Wait 1 second between repetitions (optional)
    done
}
